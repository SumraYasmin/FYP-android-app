<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Left">
    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_list"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/img" />

        <TextView
            android:id="@+id/procName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_list"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/icon_list"
            android:fontFamily="casual"
            android:text="row1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/procName"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/icon_list"
            android:fontFamily="casual"
            android:text="row2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textStyle="normal|bold" />

    </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp">

            <TextView
                android:id="@+id/practice_again"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second"
                android:layout_marginEnd="19dp"
                android:text="Practice Again!"
                android:textColor="#2ECC71"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/Left"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/layout_options"
        android:visibility="gone">

        <ImageView
            android:id="@+id/menu_options"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/options" />
    </LinearLayout>


</RelativeLayout>
