<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    android:weightSum="1"
    tools:context="com.example.ayesha.fyp.TrainerProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/Contaner"
        android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/trainer"
        android:id="@+id/imageView"
        android:layout_above="@+id/Options"
        android:layout_alignParentStart="true"
        android:layout_height="250dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:orientation="vertical"
            android:id="@+id/Options">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View First Aid Techniques"
                android:textColor="#28b463"
                android:id="@+id/view_first_aid_techniques"
                android:drawableTint="@color/colorPrimary"
                android:paddingLeft="35dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:onClick="ViewFirstAidTechniques" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Trainees"
                android:textColor="#28b463"
                android:id="@+id/view_trainees"
                android:drawableTint="@color/colorPrimary"
                android:paddingLeft="35dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/view_first_aid_procedures"
                android:clickable="true"
                android:onClick="ViewTrainees"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve New Techniques"
                android:textColor="#28b463"
                android:id="@+id/approve_new_techniques"
                android:drawableTint="@color/colorPrimary"
                android:paddingLeft="35dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:layout_below="@+id/view_trainees"
                android:clickable="true"
                android:onClick="ApproveNewTechniques" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
